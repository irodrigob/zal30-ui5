<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Dialog title="{model:'ConfirmDialogModel', path:'/title'}">
        <content>
            <Text text="{model:'ConfirmDialogModel', path:'/textMessage'}"/>
        </content>
        <beginButton>
            <Button text="{model:'ConfirmDialogModel', path:'/beginButtonText'}" 
                press="onBeginButtonDialog"/>
        </beginButton>
        <endButton>
            <Button text="{model:'ConfirmDialogModel', path:'/endButtonText'}" 
                press="onEndButtonDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>